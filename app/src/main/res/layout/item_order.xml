<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView

                android:id="@+id/order_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@id/order_name"
                android:src="@mipmap/ic_restaurant" />

            <TextView
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:id="@+id/order_name"
                android:layout_toRightOf="@id/order_image"
                android:textSize="14sp"
                android:textColor="#000"
                android:text="Nama Pesanan"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_name"
                android:id="@+id/order_status"
                android:layout_toRightOf="@id/order_image"
                android:textSize="14sp"
                android:textColor="#424242"
                android:text="Pesanan Sedang Diproses"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginStart="15dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_status"
                android:id="@+id/order_date"
                android:layout_toRightOf="@id/order_image"
                android:textSize="14sp"
                android:textColor="#949494"
                android:text="Today,"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginStart="2dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_status"
                android:id="@+id/order_time"
                android:layout_toRightOf="@id/order_date"
                android:textSize="14sp"
                android:textColor="#949494"
                android:text="12:59"
                android:textStyle="bold"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/order_id"
                android:visibility="gone"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/product_stand"
                android:visibility="gone"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textAlignment="center"/>
            <View
                android:layout_marginTop="66dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@id/order_image"
                />

        </RelativeLayout>



</LinearLayout>